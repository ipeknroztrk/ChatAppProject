@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "Yeni Mesaj Gönder";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<head>
    <style>
        .priority-option {
            margin-right: 15px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .priority-label {
            margin-bottom: 0;
            padding-right: 1rem;
        }
    </style>
</head>

<div class="row justify-content-center">
    <div class="col-lg-11">
        <div class="card mt-3 shadow" style="background-color: #f8f9fa;">
            <div class="card-body">
                <form method="post" asp-controller="Message" asp-action="NewMessage">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label priority-label">Öncelik:</label>
                        <div class="col-sm-10">
                            <div class="form-check form-check-inline priority-option">
                                <input class="form-check-input" type="radio" name="Priority" id="lowPriority" value="Düşük">
                                <label class="form-check-label" for="lowPriority" style="color: green;">Düşük</label>
                            </div>
                            <div class="form-check form-check-inline priority-option">
                                <input class="form-check-input" type="radio" name="Priority" id="mediumPriority" value="Orta">
                                <label class="form-check-label" for="mediumPriority" style="color: orange;">Orta</label>
                            </div>
                            <div class="form-check form-check-inline priority-option">
                                <input class="form-check-input" type="radio" name="Priority" id="highPriority" value="Yüksek">
                                <label class="form-check-label" for="highPriority" style="color: red;">Yüksek</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="recipient" class="col-sm-2 col-form-label">Alıcı Maili:</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" asp-for="ReRecieverMail" placeholder="Alıcı Mailini Giriniz" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="subject" class="col-sm-2 col-form-label">Konu:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Konuyu Yazınız" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message">Mesaj:</label>
                        <textarea class="form-control" asp-for="Content" placeholder="Mesajınızı buraya yazınız..." rows="10" style="font-size: 16px;" required></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary btn-out"><i class="ti-arrow-circle-down"></i> Mesaj Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>function showSuccessPopup() {
            Swal.fire({
                title: 'Başarılı!',
                text: 'Mesajınız Gönderildi.',
                icon: 'success',
                confirmButtonText: 'Tamam',
                customClass: {
                    confirmButton: 'btn btn-success'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    setTimeout(function () {
                        window.location.href = '/Message/Inbox/';
                    }, 4000);
                }
            });
        }</script>
}
